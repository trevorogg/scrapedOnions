<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.petapixel.com" target="_blank">Visit The Onion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://github.com/trevorogg" target="_blank">Visit my Github</a>
                </li>
            </ul>
        </nav>
        <h3 class="text-muted">Mongo WebScraping</h3>
    </div>

    <div class="jumbotron">
        <h1 class="jumboheader">The Onion Scraper</h1>
        <p>
            <a class="btn btn-lg btn-success" href="/scrape" role="button">Fetch articles!</a>
        </p>
    </div>

    {{#each result}}
    <div class="card news-section">
        <a href="{{this.link}}">
            <h4 class="card-header">{{this.title}}</h4>
        </a>
        <div class="card-block">

            <a href="{{this.link}}">
                <p class="card-text">{{this.articleSnippet}}</p>
            </a>
            <br>
            <a href="/articles/{{this._id}}" class="btn btn-primary">Comment</a>
        </div>
    </div>
    <br>
    <br> {{/each}}




</div>
